{% extends "SensioLabsJobBoardBundle::layout.html.twig" %}
{% from 'SensioLabsJobBoardBundle:Includes:breadcrumb.html.twig' import breadcrumb %}

{% block page_class 'preview' %}
{% block title job.title ~ ' @ ' ~ job.company %}

{% block content %}
    {{ breadcrumb({
        (job.country|country):    path('homepage', {'country': job.country}),
        (job.contractType|contractType): path('homepage', {'country': job.country, 'contractType': job.contractType}),
        (job.title): null,
    }) }}

    {% embed 'SensioLabsJobBoardBundle:Includes:job.html.twig' %}{% endembed %}
    <div class="clear"></div>
{% endblock %}
