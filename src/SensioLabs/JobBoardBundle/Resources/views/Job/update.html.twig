{% extends "SensioLabsJobBoardBundle::layout.html.twig" %}
{% from 'SensioLabsJobBoardBundle:Includes:breadcrumb.html.twig' import breadcrumb %}

{% form_theme form 'SensioLabsJobBoardBundle:Form:forms.html.twig' %}

{% block page_class 'add' %}
{% block title 'Update a Job' %}

{% block content %}
    {{ breadcrumb({
        ('My jobs'|trans): path('manage'),
        (job.title): null,
    }) }}

    <div class="box" style="padding-bottom:15px">
        {{ form(form, {attr: {novalidate: 'novalidate'}, isUpdate: true}) }}
    </div>

    <div class="clear"></div>
{% endblock %}
